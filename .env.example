# ============================================================
# Gameapy Environment Variables
# ============================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///gameapy.db
DATABASE_PATH=gameapy.db

# Railway Volume Support (Auto-detected via RAILWAY_VOLUME_MOUNT_PATH)
# If set, overrides DATABASE_PATH
# Example: DATABASE_PATH=/app/data/gameapy.db (Railway will auto-set RAILWAY_VOLUME_MOUNT_PATH)

# OpenRouter Configuration
OPENROUTER_API_KEY=your_key_here

# LLM Configuration
DEFAULT_MODEL=anthropic/claude-3-haiku
FALLBACK_MODEL=openai/gpt-3.5-turbo

# Entity Detection Settings
RECENT_CARD_SESSION_LIMIT=5  # Look back N sessions for recency loading (1-20)

# Application Settings
APP_NAME=Gameapy
APP_VERSION=3.1.0
DEBUG=false
ENVIRONMENT=development

# Auto-seed Personas (Run seed_personas.py automatically on startup)
AUTO_SEED_PERSONAS=true  # Set to "false" to disable automatic persona seeding

# LLM Safety Parameters
MAX_TOKENS=1000
TEMPERATURE=0.7
TIMEOUT=30

# Retry Logic
MAX_RETRIES=3
RETRY_DELAY=1.0